{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto text-center">
		<div class="py-12 border-b border-gray-200">
			<h1 class="text-6xl pt-12 pb-8">
				Members CRUD ({{ members|length }})
			</h1>

			{# <span class="font-light text-gray-500 italic">
						                Created by Heitor Schulz
						            </span> #}
		</div>
	</div>

	<div class="mx-auto w-4/5 my-8">
		<a href="/member/create" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
			Add new member
		</a>
	</div>

	<div class="w-96 md:grid lg:grid-cols-1 gap-20 w-4/5 mx-auto py-15">
		<div class="w-96 pt-8 pb-4 ">
			<table>
				<tr class="text-left">
					<th>Name</th>
					<th class="pl-4">E-mail</th>
					<th class="pl-4">Actions</th>
				</tr>
				{% for member in members %}
					<tr>
						<td>{{ member.name }}</td>
						<td class="pl-4">{{ member.email }}</td>
						<td class="whitespace-nowrap">
							<a href="/member/{{member.id}}" class="uppercase border border-gray-500 text-lg py-1 px-2 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800" type="button">
								<i class="fa fa-eye"></i>
							</a>
							<a href="/member/edit/{{member.id}}"  class="uppercase border border-gray-500 text-lg py-1 px-2 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800" type="button">
								<i class="fa fa-edit"></i>
							</a>
							<a href="/member/delete/{{member.id}}"  class="uppercase border border-gray-500 text-lg py-1 px-2 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800" type="button">
								<i class="fa fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>

{% endblock %}
