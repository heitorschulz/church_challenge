{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto pt-40">
		<h1 class="text-6xl text-center">
			Edit Member
		</h1>

        <div class="flex justify-end my-5">
			<div>
				<a href="/members/delete/{{ member.id }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
					<i class="fa fa-trash"></i>
					Delete Member
				</a>
			</div>
		</div>

		{{ form_start(form) }}

		{# {{ form_widget(form) }} #}

		<div class="form-row align-items-end grid grid-cols-3 gap-4">
			<div class="col">
				{{form_row(form.name)}}
			</div>

            {# <div class="col-6 form-control">
                <i class="fa fa-calendar"></i> {{ form_label(form.name) }}
                {{ form_widget(form.name) }}

                <small>{{ form_help(form.name) }}</small>

                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div> #}

			<div class="col">
				{{form_row(form.CPF)}}
			</div>
			<div class="col">
				{{form_row(form.birthday)}}
			</div>
			<div class="col">
				{{form_row(form.email)}}
			</div>
			<div class="col">
				{{form_row(form.telephone)}}
			</div>
			<div class="col">
				{{form_row(form.address)}}
			</div>
            {# <div class="col">
                <select id="member_form_city" name="member_form[city]"></select>
            </div>
            <div class="col">
                <select id="member_form_state" name="member_form[state]"></select>
            </div> #}
