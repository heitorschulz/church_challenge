				{{form_row(form.city)}}
			</div>
			<div class="col">
				{{form_row(form.state)}}
			</div>
		</div>

		<input type="hidden" name="referer" 
		value="{{app.request.headers.get('referer')}}"/>

		<button type="submit" class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg font-extrabold py-4 px-8 rounded-3xl">
			Save changes
		</button>

		{{ form_end(form) }}
	</div>
{% endblock %}